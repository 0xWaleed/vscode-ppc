{
    "name": "vcode-ppc",
    "displayName": "PowerPC",
    "description": "PowerPC Assembly Language Support",
    "version": "0.0.4",
    "publisher": "zachsez",
    "author": {
        "name": "Zach Szczesniak"
    },
    "icon": "images/logo.PNG",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "powerpc",
            "aliases": ["PowerPC Assembly", "powerpc"],
            "extensions": [".S",".s",".asm",".ppc"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "powerpc",
            "scopeName": "source.powerpc",
            "path": "./syntaxes/powerpc.tmLanguage.json"
        }],
        "configuration": [{
            "title": "PowerPC Configuration",
            "properties": {
                "vscode-ppc.highlightBlockComments": {
                    "type": "boolean",
                    "default": true,
                    "description": "Set whether block comments should be highlighted.",
                    "scope": "resource"
                },
                "vscode-ppc.singleLineCommentType": {
                    "type": "string",
                    "default": "pound sign",
                    "enum": [
                        "Pound sign (#)",
                        "Double slash (//)"
                    ],
                    "description": "Set single line comment type.",
                    "scope": "resource"
                }
            }
        }]
    },
    "repository": {
        "url": "https://github.com/zachsez/vscode-ppc",
        "type": "git"
    }
}